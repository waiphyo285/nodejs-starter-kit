extends ../includes/layout-main
block content
  main.mx-3(role='main')
    include ./../includes/modal/layout-filter-table
    include ./../includes/list/layout-list-header

    table#example.table.table-striped(style='width:100%')
      thead
        tr
          th #
          th !{content.name}
          th !{content.age}
          th !{content.grade}
          th !{content.status}
          th !{content.updated_at}
          th.text-right !{content.actions}
      tbody
  script.
    $(document).ready(function() {
      pageEntry = '!{page.entry.url}';
      $.fn.dataTable.ext.errMode = 'none';
      $.fn.dataTable.ext.classes.sPageButton = 'btn material-button material-primary m-1'; 

      table = $('#example').on('error.dt', dataTableCallback)
        .DataTable({
          ...dataTableDef('!{page.list.title}'),
          "ajax": fetchDataDef('!{page.list.url}'),
          "columns": [
            { "data": "_id" },
            { "data": "name"},
            { "data": "age" },
            { "data": "grade" },
            { "data": "status" },
            { "data": "updated_at" },
            { "data": "actions" },
          ],
          "columnDefs": [
            { targets: 0, render: dataTableIndexRenderer() },
            { targets: 4, orderable: false, render: dataTableActiveRenderer() },
            { targets: 5, orderable: false, render: dataTableDateTimeRenderer() },
            { targets: 6, orderable: false, render: dataTableActionsRenderer(
                ".!{page.entry.url}", "!{page.read}", "!{page.edit}", "!{page.delete}"
              )
            }
          ]
      });

      $("#dialogFilter").on("click", function() {
        $("#filterModalForm").trigger("submit")
      })

      $("#filterModalForm").submit(function (e) {
        e.preventDefault();
        const listUrl = '!{page.list.url}';
        const query = $(this).serialize();
        table.ajax.url(`./api/${apiVersionNum}${listUrl}?${query}`).load();
        $('#dialogFilterTable').modal('hide');
      });
    });